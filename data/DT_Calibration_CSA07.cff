#SQLITE
#tzero
es_source tzero = PoolDBESSource {  
    using CondDBSetup
    string connect =  "sqlite_file:/afs/cern.ch/cms/Physics/muon/CMSSW/DT/SQLLite/CSA07/t0Fake.db"
    untracked string catalog = "file:/afs/cern.ch/cms/Physics/muon/CMSSW/DT/SQLLite/CSA07/t0Fake.xml"
    string timetype = "runnumber"    
    untracked uint32 authenticationMethod = 0
    VPSet toGet = {{
	    string record = "DTT0Rcd" 
	    string tag = "t0Fake"
	}}
}

#ttrig: here you have to load your favourite ttrig DB 
es_source ttrig = PoolDBESSource {  
    using CondDBSetup
    string connect =  "sqlite_file:ttrig.db"
    untracked string catalog = "file:ttrig.xml"
    string timetype = "runnumber"    
    untracked uint32 authenticationMethod = 0
    VPSet toGet = {{
	    string record = "DTTtrigRcd"
	    string tag ="ttrig"
	}}
}

